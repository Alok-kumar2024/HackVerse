    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout_Containing_Views"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/profilebox"
       android:layout_marginTop="50dp">


        <Button
            android:id="@+id/buttonCancelHackathon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="100dp"
            android:backgroundTint="@color/red"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonCreateHackathon"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.021" />

        <Button
            android:id="@+id/buttonCreateHackathon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/blue"
            android:text="Create"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.871"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.022" />

        <TextView
            android:id="@+id/TextViewBannerURL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Banner URL"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EditTextBannerURL"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttonCancelHackathon" />

        <EditText
            android:id="@+id/EditTextBannerURL"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="124dp"
            android:elevation="30dp"
            android:background="@drawable/profileedittext"
            android:hint="Enter Banner URL"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/TextViewEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="Event Name*"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EditTextEventName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.133"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextBannerURL"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/EditTextEventName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/profileedittext"
            android:hint="Enter Name Of Event"
            android:padding="10dp"
            android:elevation="30dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextBannerURL" />

        <TextView
            android:id="@+id/TextViewHostName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="Host Name*"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EditTextHostName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.131"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextEventName"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/EditTextHostName"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/profileedittext"
            android:hint="Host Name"
            android:padding="10dp"
            android:textColor="@color/black"
            android:elevation="30dp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextEventName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Prize*"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/EditTextPrize"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.114"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextHostName"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/EditTextPrize"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:background="@drawable/profileedittext"
            android:hint="Prize"
            android:padding="10dp"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:inputType="number"
            android:elevation="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.28"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextHostName" />

        <LinearLayout
            android:id="@+id/LinearLayoutStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.482"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/EditTextPrize"
            app:layout_constraintBottom_toTopOf="@+id/LinearLayoutStartTime">

            <Button
                android:id="@+id/ButtonSelectStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Select Start Date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/TextViewSelectStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Start Date*"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutStartDate"
            app:layout_constraintBottom_toTopOf="@+id/LinearLayoutEndDate">

            <Button
                android:id="@+id/ButtonSelectStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Select Start Time"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/TextViewSelectStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:hint="Start Time*"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutStartTime"
            app:layout_constraintBottom_toTopOf="@+id/LinearLayoutEndTime">

            <Button
                android:id="@+id/ButtonSelectEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Select End Date"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/TextViewSelectEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="End Date*"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutEndDate"
            app:layout_constraintBottom_toTopOf="@+id/EditTextDescription">

            <Button
                android:id="@+id/ButtonSelectEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/green"
                android:text="Select End Time"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"/>

            <TextView
                android:id="@+id/TextViewSelectEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="End Time*"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/TextViewDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Description*"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/LinearLayoutEndTime"
            app:layout_constraintBottom_toTopOf="@+id/EditTextDescription"/>



        <EditText
            android:id="@+id/EditTextDescription"
            android:layout_width="350dp"
            android:layout_height="400dp"
            android:layout_marginTop="276dp"
            android:background="@drawable/profileedittext"
            android:gravity="start"
            android:layout_marginBottom="80dp"
            android:elevation="30dp"
            android:hint="Give Description here"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.489"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/EditTextPrize" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>